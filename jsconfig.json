{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"],
          "@components/*": ["src/components/*"],
          "@pages/*": ["./src/pages/*"],
          "@utils/*": ["./src/utils/*"],
          "@views/*": ["./src/views/*"],
          "@hooks/*": ["./src/hooks/*"],
          "@assets/*": ["./src/assets/*"],
          "@api/*": ["./src/api/*"],
          "@styles/*": ["./src/styles/*"],
          "@archive/*": ["./src/archive/*"]
        }
    },
    "exclude": [
        "node_modules", "**/node_modules/*", "dist"
    ],
    "include": ["src/**/*"],
}