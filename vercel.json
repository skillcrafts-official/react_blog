{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://portfolio-blog-api.ru/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "https://portfolio-blog-api.ru/media/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}